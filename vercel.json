{
    "version": 2,
    "builds": [
    {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/app.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    },
    "build": {
        "env": {
            "PIP_NO_CACHE_DIR": "true",
            "PIP_DISABLE_PIP_VERSION_CHECK": "true"
        },
        "command": "apt-get update && apt-get install -y python3-dev build-essential && pip install --upgrade pip && pip install -r requirements.txt"
    },
    "scripts": {
        "build": "pip install -r requirements.txt"
    }
}
